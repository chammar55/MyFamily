<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_16_dp"
    android:layout_marginTop="@dimen/dimen_12_dp"
    android:layout_marginEnd="@dimen/dimen_16_dp"
    android:layout_marginBottom="@dimen/dimen_12_dp"
    android:background="@color/gray_bg"
    app:cardCornerRadius="@dimen/dimen_16_dp"
    app:cardElevation="@dimen/dimen_8_dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16_dp">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/dimen_64_dp"
            android:layout_height="@dimen/dimen_64_dp"
            android:elevation="@dimen/dimen_16_dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="@dimen/dimen_16_dp"
            android:layout_height="@dimen/dimen_24_dp"
            android:layout_marginStart="@dimen/dimen_8_dp"
            android:elevation="@dimen/dimen_16_dp"
            android:src="@drawable/ic_location"
            app:layout_constraintBottom_toBottomOf="@id/img_user"
            app:layout_constraintStart_toEndOf="@id/img_user"
            app:layout_constraintTop_toTopOf="@id/img_user"
            app:tint="@color/guard_green" />

        <TextView
            android:id="@+id/address"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginStart="4dp"
            android:elevation="@dimen/dimen_16_dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="9th building, 2nd floor, maldiv road"
            app:layout_constraintBottom_toBottomOf="@id/img_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_location"
            app:layout_constraintTop_toTopOf="@id/img_user" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dimen_16_dp"
            android:text="Ammar Ibrahim"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/img_location"
            app:layout_constraintTop_toTopOf="@id/img_user" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:elevation="@dimen/dimen_16_dp"
            android:text="18:40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/name" />

        <LinearLayout
            android:id="@+id/lin_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8_dp"
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:background="@drawable/shape_rounded_rect"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/lin_distance"
            app:layout_constraintStart_toStartOf="@id/img_user"
            app:layout_constraintTop_toBottomOf="@id/img_user">


            <ImageView
                android:id="@+id/img_battery"
                android:layout_width="@dimen/dimen_24_dp"
                android:layout_height="@dimen/dimen_24_dp"
                android:src="@drawable/ic_battery"
                app:tint="#05BFAD" />

            <TextView
                android:id="@+id/battery_persent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="90%"
                android:textColor="#FF05BFAD"
                android:textStyle="bold" />

            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8_dp"
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:elevation="@dimen/dimen_16_dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/lin_wifi"
            app:layout_constraintStart_toEndOf="@id/lin_battery"
            app:layout_constraintTop_toBottomOf="@id/img_user">

            <ImageView
                android:id="@+id/img_distance"
                android:layout_width="@dimen/dimen_16_dp"
                android:layout_height="@dimen/dimen_24_dp"
                android:src="@drawable/ic_send_msg"
                app:layout_constraintStart_toEndOf="@id/battery_persent"
                app:layout_constraintTop_toBottomOf="@id/img_user"
                app:tint="#b197bc" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="223M"
                android:textColor="@color/guard_green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/img_battery"
                app:layout_constraintStart_toEndOf="@id/img_distance"
                app:layout_constraintTop_toTopOf="@id/img_battery" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8_dp"
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:elevation="@dimen/dimen_16_dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/img_call"
            app:layout_constraintStart_toEndOf="@id/lin_distance"
            app:layout_constraintTop_toBottomOf="@id/img_user">

            <ImageView
                android:id="@+id/img_wifi"
                android:layout_width="@dimen/dimen_16_dp"
                android:layout_height="@dimen/dimen_24_dp"
                android:src="@drawable/ic_wifi"
                app:layout_constraintStart_toEndOf="@id/distance_text"
                app:layout_constraintTop_toBottomOf="@id/img_user"
                app:tint="#b197bc" />

            <TextView
                android:id="@+id/wifi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="WIFI"
                android:textColor="@color/guard_green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/img_battery"
                app:layout_constraintStart_toEndOf="@id/img_wifi"
                app:layout_constraintTop_toTopOf="@id/img_battery" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_call"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/shape_circle"
            android:elevation="@dimen/dimen_16_dp"
            android:padding="@dimen/dimen_8_dp"
            android:src="@drawable/ic_call"
            app:layout_constraintBottom_toBottomOf="@id/lin_battery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/lin_battery"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>


